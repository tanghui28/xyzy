/* pages/home/home.wxss */
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding-top:300rpx;
    box-sizing: border-box;
}
.appName{
    font-weight: bold;
    font-size: 60rpx;
    text-align: center;
}
.xyzyLogo{
    width:306px;
    height:68px;
}
.slogan{
    color:#999;
}
.searchContainer {
   width:100%;
   /* padding:40px 20px; */
   padding:40px 20px 30px 20px;
   position: relative;
}
.searchContainer input{
    border:1px solid #ddd;
    height:50px;
    width:100%;
    border-radius: 4px;
    padding-left:40px;
    padding-right:50px;
    background-color: #fff;
}
.searchContainer icon{
    position: absolute;
    left:32px;
    top:54px;
}
.searchContainer text{
    position: absolute;
    right:34px;
    top:54px;
    color:#179B16;
    font-size: 18px;
}
.storeName{
    color: #999;

    text-align: center;
}
.switch{
    color:#179B16;
    padding:14px;

}
.logOut{
    color: #EB4746;
    padding: 14px;
    position: relative;
    right: -60px;
    
}
.btns{
    width: 100%;
    padding: 40px 20px 30px 20px;
    display: flex;
    justify-content: center;
    align-items: center;
}