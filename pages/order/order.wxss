.fixed{
  position: fixed;
  top:0;
  left:0;
  width:100%;
}
.tab{
  display: flex;
  justify-content: center;
  background-color: #fff;
}
.tab>text{
  display: inline-block;
  color: #999;
  text-align: center;
  width: 80px;
  height: 46px;
  line-height: 46px;
  border-bottom:2px solid transparent;
  margin: 0 6px;
}
.tab>text.active{
  color: #179B16;
  border-bottom-color: #179B16;
}
.searchBar {
  background-color: #efeff4;
  height: 50px;
  padding: 6px 60px 6px 10px;
  position: relative;
}
.searchBar icon {
  position: absolute;
  left: 18px;
  top: 16px;
}

.searchBar input {
  background-color: #fff;
  height: 100%;
  padding-left: 40px;
  border-radius: 4px;
}

.searchBar text {
  color: #179B16;
  position: absolute;
  top: 0px;
  right: 0px;
  height: 50px;
  line-height: 50px;
  width: 60px;
  text-align: center;
}
/* 筛选项 */
.filterView{
  padding:10px 6px;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  background-color: #f8f8f8;
  overflow-x: scroll;
}
.filterView::-webkit-scrollbar {
  display: none;
}
.filterView>text{
    font-size: 14px;
    margin-right:4px; 
    white-space: nowrap;
}
.filterView>text.filterItem{
  background-color: #efeff4;
  padding:2px 8px;
  border-radius: 20px;
  background-color: #fff;
  color:#999;
}
.filterView>text.active{
  background-color: #E8E8E8;
  color:#000;
}
/* 需求单详情 */
.orderList{
  padding:0 10px;
  
}
.orderList.hasGoods{
  padding-top: 140px;
}
.orderList.noGoods{
  padding-top: 100px;
}
.orderList>.endLine{
  display: flex;
  flex-direction: row;
  align-items: center;
  color:#ddd;
  font-size: 12px;
}
.orderList>.endLine>.line{
  flex-grow: 2;
  border-bottom:1px dashed #ddd;
}
.orderList>.orderItem{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom:10px;
  padding:10px 4px;
  border-radius: 6px;
}
.orderList>.orderItem>.orderDate{
  font-size: 14px;
  color:#999;
  border-bottom: 1px solid #ddd;
  padding-bottom: 4px;
}
.orderList>.orderItem>.orderDetail{
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding:10px 0;
  border-bottom:1px solid #ddd;
}
.orderList>.orderItem>.orderDetail>.imgContainer{
  width:128px;
  height:80px;
}
.orderList>.orderItem>.orderDetail>.imgContainer>image{
  width:100%;
  height:100%;
}
.orderList>.orderItem>.orderDetail>.orderInfo{
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-left:6px;
}
.orderList>.orderItem>.orderDetail>.orderInfo.hasGoods{
  width:calc(100% - 208px);
}
.orderList>.orderItem>.orderDetail>.orderInfo text{
  font-size: 14px;
  color:#999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.orderList>.orderItem>.orderDetail>.orderInfo>.productName{
  color:#000;
  font-size: 16px;
  font-weight: bold;
}
.orderList>.orderItem>.orderDetail>.orderInfo .buyCount{
  font-weight: bold;
  font-size: 18px;
  color:#000;
  margin-left: 6px;
}
.orderList>.orderItem>.orderDetail>.orderState{
  width:82px;
  display: flex;
  align-items: flex-end;
  flex-direction: column;
  justify-content: flex-start;
}
.orderList>.orderItem>.orderDetail>.orderState>text{
  font-size: 12px;
  color:#999;
}
.orderList>.orderItem>.orderDetail>.orderState>text.cancel{
  color:red;
}
.orderList>.orderItem>.orderDetail>.orderState>text.success{
  color:#179B16;
}
.orderList>.orderItem>.orderRemark{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-top:4px;
}
.orderList>.orderItem>.orderRemark>.orderRemarkDetail{
  display: flex;
  flex-direction: column;
  font-size: 14px;
  color:#999;
  width:calc(100% - 50px);
}
.orderList>.orderItem>.orderRemark>.orderRemarkDetail.noGoods {
  display: flex;
  flex-direction: column;
  font-size: 14px;
  color: #999;
  width: calc(100% - 120px);
}
.refuse{
  font-size: 14px;
  color:#999;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;

}
.orderList>.orderItem>.orderRemark>.orderRemarkDetail>.remark{
  width:100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.orderList>.orderItem>.orderRemark>.deleteBtn{
  font-size: 14px;
  padding:2px 10px;
  border:1px solid #ddd;
  border-radius: 12px;
  width:50px;
}



