/* Tang 2019/2/16 */
page{
    padding-top:50px;
}
.searchBar{
    background-color: #efeff4;
    height:50px;
    width:100%;
    padding:6px 60px 6px 10px;
    position: fixed;
    top:0;
    left:0;
    z-index: 999;
}
.searchBar icon{
    position: absolute;
    left:18px;
    top:16px;
}
.searchBar input{
    background-color: #fff;
    height:100%;
    padding-left:40px;
    border-radius: 4px;
}
.searchBar text{
    color:#179B16;
    position: absolute;
    top:0px;
    right:0px;
    height:50px;
    line-height: 50px;
    width:60px;
    text-align: center;
}

/* 搜索词建议 */
.searchSuggestion{
    position: fixed;
    width:100%;
    height:100%;
    top:50px;
    left:0;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    padding:10px 10px;
}
.searchSuggestion>text{
    font-size: 16px;
    width:100%;
    border-bottom:1px solid #eee;
    padding:6px 0;
    color: #999;
}

/* 搜索历史 */
.searchHistory{
    padding:6px;
}
.searchHistory>.historyTitle{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height:40px;
}
.searchHistory>.historyTitle>text{
    height:24px;
    line-height: 24px;
    font-size: 16px;
    color:#8a8a8a;
}
.searchHistory>.historyTitle>image{
    width:28px;
}

.searchHistory>.historyDetail{
    display: flex;
    flex-wrap: wrap;
}
.searchHistory>.historyDetail>text{
    background-color: #efeff4;
    padding:2px 10px;
    border-radius: 20px;
    margin:4px 4px;
    font-size: 14px;
    color:#999;
}

/* 产品详情 */
.productList{
    /* padding:10px 10px; */
}
.productList>.product{
    display: flex;
    align-items: center;
    border-bottom:1px solid #ddd;
    background-color: #fff;
    padding:10px 10px; 
}
.productList image{
    width:128px;
    height:70px;
}
.productList>.product>.productDetail{
    display: inline-block;
    width:calc(100% - 128px);
    display: flex;
    flex-direction: column;
}
.productList>.product>.productDetail>.drugName{
    margin-bottom:6px;
}
.productList>.product>.productDetail>.spec{
    color:#999;
    font-size: 14px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.productList>.product>.productDetail>.factory{
    color:#999;
    font-size: 14px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.productList>.product>.productDetail>.price{
    color:#999;
    font-size: 14px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-top:4px;
}
.productList>.product>.productDetail>.price>text{
    color:rgb(199, 15, 15);
    font-size: 16px;
}
.productList>.product>.productDetail>.price>text:first-child{
    margin-left:10px;
}  

.productList>.endLine {
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #ddd;
    font-size: 12px;
}
.productList>.endLine>.line {
    flex-grow: 2;
    border-bottom: 1px dashed #ddd;
}
